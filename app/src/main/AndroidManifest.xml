<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tsellstore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TSellStore">
        <activity android:name=".ViewAllActivity"></activity>
        <activity android:name=".NavigationComponent.MyAccount_Address_Delivery.AddingAddressActivity" />
        <activity android:name=".NavigationComponent.MyAccount_Address_Delivery.MyAddressActivity" />
        <activity android:name=".NavigationComponent.MyAccount_Address_Delivery.DeliveryActivity" />
        <activity android:name=".NavigationComponent.Myorders.OrderDetails.OrderDetailsActivity" />

        <activity android:name=".ProductDetailsActivity" />
        <activity android:name=".CategoryActivity" />

        <activity
            android:name=".NavigationComponent.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TSellStore.NoActionBar" />

        <activity android:name=".SigninSignUp.RegisterActivity" />

        <activity
            android:name=".SpalshActivity"
            android:theme="@style/Theme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>